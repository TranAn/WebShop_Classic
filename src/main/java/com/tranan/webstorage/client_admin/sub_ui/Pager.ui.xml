<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	@external .Pager_s1, .Pager_s2_deactived;
	.s1 {
		position: relative;
		overflow: hidden;
		margin-top: 20px;
	}
	
	.s2 {
		position: relative;
		float: left;
		margin-right: 5px;
		width: 30px;
		height: 36px;
		color: #797979;
		background: #ffffff;
		border: 1px solid #efefef;
		text-align: center;
		line-height: 3;
		cursor: pointer;
		font-size: 12px;
	}
	
	.s2:hover {
		color: #42a5f5 !important;
		background-color: #eeeeee;
		border: 1px solid #dddddd;
	}
	
	.s2:hover .Pager_s1 {
		color: #42a5f5 !important;
	}
	
	.s2_actived {
		position: relative;
		float: left;
		margin-right: 5px;
		width: 32px;
		height: 36px;
		color: #ffffff;
		background-color: #42a5f5;
		border: 1px solid #42a5f5;
		text-align: center;
		line-height: 3;
		cursor: pointer;
		font-size: 12px;
	}
	
	.Pager_s2_deactived {
		position: relative;
		float: left;
		margin-right: 5px;
		width: 32px;
		height: 36px;
		color: #777777;
		background-color: #efefef;
		border: 1px solid #efefef;
		text-align: center;
		line-height: 3;
		cursor: not-allowed;
		font-size: 12px;
	}
	
	.Pager_s1 {
		color: #777777;
		font-size: 13px;
		line-height: 3;
	}
	
	.s3 {
		float: left;
		border: 1px solid #efefef;
		border-right: none;
		height: 34px;
		width: 25px;
		margin-left: 5px;
		text-align: right;
		color: #797979;
		padding-right: 2px;
		font-family: "Noto Serif", serif !important;
	}
	
	.s3:focus {
		outline: none;
	}
	
	.s4 {
		float: left;
		border: 1px solid #efefef;
		/* border-left: none; */
		height: 36px;
		background: #ffffff;
		margin-left: 5px;
		margin-right: 10px;
		color: #797979;
		line-height: 2.8;
		padding-left: 16px;
		padding-right: 16px;
	}
	
	.s5 {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.s1}">
		<g:HTMLPanel styleName="{style.s2} Pager_s2_deactived" ui:field="pageLeft">
			<i class="material-icons Pager_s1">&#xE314;</i>
			<g:Anchor ui:field="pagerPreviousButton" styleName="{style.s5}"></g:Anchor>
		</g:HTMLPanel>
		<!-- <g:TextBox styleName="{style.s3}">1</g:TextBox> -->
		<g:Label ui:field="pagerLabel" styleName="{style.s4}">0 - 0 / 0</g:Label>
		<g:HTMLPanel styleName="{style.s2}" ui:field="pageRight">
			<i class="material-icons Pager_s1">&#xE315;</i>
			<g:Anchor ui:field="pagerNextButton" styleName="{style.s5}"></g:Anchor>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 