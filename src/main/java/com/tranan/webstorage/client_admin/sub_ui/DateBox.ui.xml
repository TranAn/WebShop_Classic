<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.s1 {
		
	}
	
	.s2 {
		float: left;
		width: 85px;
		border: none;
		border-bottom: 1px solid #e2e9e6;
		height: 40px;
		font-size: 15px;
		color: #333333;
		/* text-align-last: center; */
		text-align: center;
	}
	
	.s2:focus {
		outline: none;
		border-bottom: 1px solid #42a5f5;
		z-index: 100;
	}
	
	.s3 {
		float: left;
		margin-left: 10px;
		margin-right: 10px;
		margin-top: 10px;
		font-size: 20px;
		color: #e2e9e6;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.s1}">
		<g:TextBox ui:field="dateTxb" styleName="{style.s2}"></g:TextBox>
		<g:Label styleName="{style.s3}">/</g:Label>
		<g:TextBox ui:field="monthTxb" styleName="{style.s2}"></g:TextBox>
		<g:Label styleName="{style.s3}">/</g:Label>
		<g:TextBox ui:field="yearTxb" styleName="{style.s2}"></g:TextBox>
	</g:HTMLPanel>
</ui:UiBinder> 