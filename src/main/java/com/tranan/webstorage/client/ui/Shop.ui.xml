<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.tranan.webstorage.client.sub_ui">
	<ui:style>
	@external .Shop_itemPanel, .Shop_itemImgPanel, .Shop_itemAnchor, .Shop_itemImg, .Shop_itemQuickViewBtn, .Shop_itemQuickViewBtn_show, .Shop_itemLb1, .Shop_itemLb2, .Shop_itemLb3;
	.s1 {
		text-align: center;
		margin-left: 15px;
		font-size: 35px;
		letter-spacing: 10px;
		color: #303132;
		margin-top: 120px;
		font-family: times new roman, times, serif;
		font-weight: 600;
	}
	
	.s2 {
		width: 30%;
		margin: auto;
		margin-top: 30px;
		border-bottom: 1px black solid;
	}
	
	.s3 {
		display: grid;
		position: relative;
		grid-template-columns: 33% 33% 33%;
  		grid-gap: 10px;
		overflow: hidden;
		width: 900px;
		margin: auto;
		margin-top: 40px;
	}
	
	.s4 {
		position: relative;
		width: 280px;
		height: 300px;
		background: silver;
		overflow: hidden;
		cursor: pointer;
	}
	
	.s7 {
		position: relative;
		overflow: hidden;
		width: 900px;
		margin: auto;
		margin-top: 10px;
	}
	
	.s5 {
		position: relative;
		overflow: hidden;
		margin-bottom: 50px;
	}
	
	.s6 {
		overflow: hidden;
		float: right;
		/* padding-right: 5px; */
	}

	.Shop_itemPanel {
		position: relative;
		overflow: hidden;
		/* float: left;
		width: 280px;
		margin: 0px 10px 50px 10px; */
	}
	
	.Shop_itemImgPanel {
		position: relative;
		width: 280px;
		height: 300px;
		background: rgb(231, 231, 231);
		overflow: hidden;
		cursor: pointer;
	}
	
	.Shop_itemAnchor {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
	}
	
	.Shop_itemImg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;		
	}
	
	.Shop_itemQuickViewBtn {
		position: absolute;
		bottom: 0;
		width: 100%;
		height: 0px;
		background: rgba(255, 255, 255, .75);
		font-family: 'Raleway', sans-serif;
		text-align: center;
		font-size: 16px;
		line-height: 3;
		transition-property: all;
		transition-duration: .5s;
		transition-timing-function: cubic-bezier(0, 1, 0.5, 1);
	}
	
	.Shop_itemQuickViewBtn_show {
		height: 50px;
	}
	
	.Shop_itemLb1 {
		color: #303132;
		font-weight: 400;
		margin-top: 20px;
		font-size: 18px;
		font-family: 'Raleway', sans-serif;
	}
	
	.Shop_itemLb2 {
		opacity: 0.5;
		color: #303132;
		font-weight: 400;
		margin-top: 10px;
		margin-right: 10px;
		font-size: 15px;
		font-family: 'Raleway', sans-serif;
		text-decoration: line-through;
		float: left;
	}
	
	.Shop_itemLb3 {
		float: left;
		color: #303132;
		font-weight: 400;
		margin-top: 10px;
		font-size: 15px;
		font-family: 'Raleway', sans-serif;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.s5}">
		<g:Label styleName="{style.s1}">ON SALE</g:Label>
		<g:HTMLPanel styleName="{style.s2}"></g:HTMLPanel>

		<g:HTMLPanel ui:field="itemTable" styleName="{style.s3}">
			<!-- <g:HTMLPanel styleName="{style.s7}">
				<g:HTMLPanel styleName="{style.s4}">
					<g:Anchor ui:field="item1" styleName="{style.s11}"></g:Anchor>
					<g:Image url="Resources/1.png" styleName="{style.s6}"></g:Image>
					<g:HTMLPanel ui:field="item1_view" styleName="{style.Shop_s1}">QUICK VIEW</g:HTMLPanel>
				</g:HTMLPanel>
				<g:Label styleName="{style.s8}">I'm a Product</g:Label>
				<g:Label styleName="{style.s9}">$19.99</g:Label>
				<g:Label styleName="{style.s10}">$15.00</g:Label>
			</g:HTMLPanel>  -->
		</g:HTMLPanel>
		
		<g:HTMLPanel styleName="{style.s7}">
			<m:Pager styleName="{style.s6}" ui:field="pager"></m:Pager>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 